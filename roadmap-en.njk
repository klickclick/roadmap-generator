        .card {
            background-color: #002D56;
            /* Athletes USA Blue */
            color: white;
            border-radius: 0.75rem;
            padding: 2rem;
            border: 1px solid #00254a;
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.05), 0 2px 4px -2px rgb(0 0 0 / 0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        }

        .section-title {
            font-size: 2.25rem;
            /* 36px */
            font-weight: 900;
            /* Color REMOVED HERE, so text-white works! */
            text-align: center;
            margin-bottom: 2.5rem;
        }

        /* Custom styles for the improved timeline */
        .timeline-item::before {
            content: '';
            position: absolute;
            left: -30px;
            top: 4px;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            background-color: #002D56;
            /* Blue background to pop */
            border: 4px solid #ffffff;
            /* White border */
        }

        .timeline-path {
            position: absolute;
            left: -23px;
            top: 12px;
            bottom: -12px;
            width: 2px;
            background-color: #ffffff;
            /* White line */
        }

        .timeline-item:last-child .timeline-path {
            display: none;
        }

        /* Styles for Details/Summary Accordion */
        details>summary {
            list-style: none;
        }

        details>summary::-webkit-details-marker {
            display: none;
        }

        @media print {
